<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/card_title"
            android:background="@drawable/curve_bg_blue"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:elevation="4dp"
            android:padding="20dp"
            android:orientation="vertical"
            tools:targetApi="lollipop">

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            app:srcCompat="@drawable/ic_baseline_looks_one_24"
                            android:contentDescription="@string/todo"
                            app:tint="@color/white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_baseline_looks_two_24"
                            android:layout_weight="1"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            app:tint="@color/white"
                            android:contentDescription="@string/todo"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/passion_one_bold"
                    android:text="@string/flash_math"
                    android:textColor="@color/white"
                    android:textSize="34sp"/>

                <TextView
                    android:id="@+id/titleSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="casual"
                    android:text="@string/multiplication"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            app:srcCompat="@drawable/ic_baseline_looks_3_24"
                            android:contentDescription="@string/todo"
                            app:tint="@color/white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_baseline_looks_4_24"
                            android:layout_weight="1"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            app:tint="@color/white"
                            android:contentDescription="@string/todo"/>

                </LinearLayout>

                <Button
                    android:id="@+id/flash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:alpha="0.95"
                    android:background="@drawable/button_bg_red_up"
                    android:elevation="18dp"
                    android:fontFamily="@font/passion_one_bold"
                    android:padding="12dp"
                    android:text="@string/start"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    tools:targetApi="lollipop" />
        </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>